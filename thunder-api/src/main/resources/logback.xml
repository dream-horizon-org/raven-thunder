<configuration scan="true" scanPeriod="10 seconds">
  <property name="artifactId" value="thunder"/>
  <property name="log.directory.path" value="/var/logs"/>
  <property name="log.file.name" value="thunder.log"/>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log.directory.path}/${log.file.name}</file>
    <append>true</append>
    <encoder>
      <pattern>
        %date %highlight(%+5level) %-26thread %logger{36} [%file:%line] %green(%msg) %n
      </pattern>
    </encoder>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${log.directory.path}/archived/thunder.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>512MB</maxFileSize>
      <maxHistory>7</maxHistory>
      <totalSizeCap>5GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="FILE"/>
    <includeCallerData>${includeCallerData:-false}</includeCallerData>
    <neverBlock>true</neverBlock>
  </appender>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %date %highlight(%+5level) %-26thread %logger{36} [%file:%line] %green(%msg) %n
      </pattern>
    </encoder>
  </appender>

  <logger name="com.raven.thunder" level="debug"/>

  <root level="info">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="ASYNC_FILE"/>
  </root>

</configuration>

